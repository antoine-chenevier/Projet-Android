<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Traducteur"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.532"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.051" />

    <EditText
        android:id="@+id/editTextTraduire"
        android:layout_width="340dp"
        android:layout_height="122dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="68dp"
        android:ems="10"
        android:hint="Texte Ã  traduire"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/traduire"
        android:layout_width="158dp"
        android:layout_height="66dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="332dp"
        android:onClick="Traduire"
        android:text="traduire"
        app:icon="@android:drawable/stat_sys_headset"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/historique"
        android:layout_width="171dp"
        android:layout_height="73dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="600dp"
        android:onClick="Historique"
        android:text="historique"
        app:icon="?attr/actionModeCopyDrawable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTraduction"
        android:layout_width="340dp"
        android:layout_height="104dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="208dp"
        android:text="Texte Traduit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/parametres"
        android:layout_width="180dp"
        android:layout_height="73dp"
        android:layout_marginStart="204dp"
        android:layout_marginTop="600dp"
        android:onClick="Parametres"
        android:text="parametres"
        app:icon="@android:drawable/ic_menu_preferences"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="329dp"
        android:layout_height="65dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="244dp"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/editLanguage"
        android:layout_width="105dp"
        android:layout_height="61dp"
        android:layout_marginStart="268dp"
        android:layout_marginTop="332dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="FR"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>